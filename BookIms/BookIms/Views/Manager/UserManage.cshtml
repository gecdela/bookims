                                                    <div class="col-sm-9">
                                                        <input type="text" class="form-control" id="add_tel"
                                                               name="add_tel" placeholder="请输入电话">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <label for="email" class="col-sm-2 control-label">邮箱</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" class="form-control" name="add_email"
